{% extends 'base.html.twig' %}

{% block title %}Tweet index{% endblock %}

{% block body %}
    <h1>Tweet index</h1>

        {% for tweet in tweets %}
            <turbo-frame id="tweet_{{ tweet.id }}" class="border rounded mb-3">
                <div class="d-flex">
                    <div class="p-3">{{ tweet.id }}</div>
                    <div class="p-3">{{ tweet.content }}</div>
                    <div class="p-3 text-nowrap">{{ tweet.author }}</div>
                </div>
                <div class="d-flex gap-3 p-3">
                    <div>{{ tweet.createdAt ? tweet.createdAt|date('Y-m-d H:i:s') : '' }}</div>
                    <a href="{{ path('app_tweet_edit', {'id': tweet.id}) }}">edit</a>
                </div>
            </turbo-frame>
        {% else %}
            <div class="notice">
                no records found
            </div>
        {% endfor %}

    <a href="{{ path('app_tweet_new') }}">Create new</a>
{% endblock %}
